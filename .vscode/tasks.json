{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Perft Regression Test",
            "type": "shell",
            "command": "${workspaceFolder}/regression/perft.sh",
            "args": [
                "\"${input:depth}\"",
                "\"${input:hash-size}\"",
                "\"${input:label}\""
            ],
            "problemMatcher": [],
            "dependsOn": ["CMake: build"]
        },
        {
            "label": "Evalution Regression Test",
            "type": "shell",
            "command": "${workspaceFolder}/regression/evaluate.sh",
            "args": [
                "\"${input:fen}\"",
                "\"${input:depth}\"",
                "\"${input:hash-size}\"",
                "\"${input:label}\""
            ],
            "problemMatcher": [],
            "dependsOn": ["CMake: build"]
        },
        {
            "label": "Puzzler Regression Test",
            "type": "shell",
            "command": "${workspaceFolder}/regression/puzzler.sh",
            "args": [
                "\"puzzles/${input:puzzle-file}.csv\"",
                "\"${input:depth}\"",
                "\"${input:hash-size}\"",
                "\"${input:label}\""
            ],
            "problemMatcher": [],
            "dependsOn": ["CMake: build"]
        }
    ],
    "inputs": [
        {
            "id": "label",
            "type": "promptString",
            "description": "Regression tracking label (can be empty).",
        },
        {
            "id": "depth",
            "type": "promptString",
            "description": "Maximum tree depth.",
            "default": "7"
        },
        {
            "id": "hash-size",
            "type": "promptString",
            "description": "Upper-limit of hash-table size in MB. Must be positive.",
            "default": "256"
        },
        {
            "id": "puzzle-file",
            "type": "pickString",
            "description": "Puzzle file",
            "options": [
                "mate500",
                "endgame500",
                "middlegame500"
            ],
            "default": "copy"
        },
        {
            "id": "fen",
            "type": "pickString",
            "description": "Position FEN string",
            "options": [
                "rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1",
                "r3k2r/p1ppqpb1/bn2pnp1/3PN3/1p2P3/2N2Q1p/PPPBBPPP/R3K2R w KQkq - 0 1",
                "8/2p5/3p4/KP5r/1R3p1k/8/4P1P1/8 w - - 0 1",
                "r3k2r/Pppp1ppp/1b3nbN/nP6/BBP1P3/q4N2/Pp1P2PP/R2Q1RK1 w kq - 0 1",
                "rnbq1k1r/pp1Pbppp/2p5/8/2B5/8/PPP1NnPP/RNBQK2R w KQ - 1 8",
                "r4rk1/1pp1qppp/p1np1n2/2b1p1B1/2B1P1b1/P1NP1N2/1PP1QPPP/R4RK1 w - - 0 10"
            ],
            "default": "copy"
        }
    ]
}