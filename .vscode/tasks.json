{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Perft Regression Test",
            "type": "shell",
            "command": "${workspaceFolder}/regression/perft.sh",
            "args": [
                "\"${input:strategy}\"",
                "\"${input:depth}\"",
                "\"${input:hash-size}\"",
                "\"${input:label}\""
            ],
            "problemMatcher": []
        },
        {
            "label": "Evalution Regression Test",
            "type": "shell",
            "command": "${workspaceFolder}/regression/evaluate.sh",
            "args": [
                "\"${input:label}\""
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "label",
            "type": "promptString",
            "description": "Regression tracking label (can be empty).",
        },
        {
            "id": "depth",
            "type": "promptString",
            "description": "Maximum tree depth.",
            "default": "7"
        },
        {
            "id": "hash-size",
            "type": "promptString",
            "description": "Upper-limit of hash-table size in MB.",
            "default": "1000"
        },
        {
            "id": "strategy",
            "type": "pickString",
            "description": "Perft tree-traversal strategy",
            "options": [
                "copy-no-hash",
                "unmake-no-hash",
                "copy-hash",
                "unmake-hash"
            ],
            "default": "unmake-hash"
        }
    ]
}